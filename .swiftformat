--swiftversion 5

--exclude Resources/CodeGen/**,Pods/**

--enable isEmpty
--disable blankLinesAroundMark,blankLinesAtStartOfScope,redundantRawValues

--closingparen same-line
--decimalgrouping 3,4
--extensionacl on-declarations
--ifdef no-indent
--semicolons never
--stripunusedargs closure-only
